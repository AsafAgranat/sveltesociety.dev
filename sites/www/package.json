{
	"name": "www",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node --env-file=.env build",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:init": "NODE_ENV=development tsx ./src/lib/server/db/initiate.ts",
		"db:seed": "NODE_ENV=development tsx ./src/lib/server/db/seeds/index.ts",
		"db:test:init": "NODE_ENV=test tsx ./src/lib/server/db/initiate.ts",
		"db:test:seed": "NODE_ENV=test tsx ./src/lib/server/db/seeds/index.ts",
		"test:integration": "NODE_ENV=test pnpm run db:test:init && pnpm run db:test:seed && pnpm run build && playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.2",
		"@faker-js/faker": "^9.0.3",
		"@playwright/test": "^1.48.0",
		"@sveltejs/adapter-node": "^5.2.6",
		"@sveltejs/enhanced-img": "^0.1.9",
		"@sveltejs/kit": "^2.7.0",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.8",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@types/better-sqlite3": "^7.6.11",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.5",
		"marked": "^14.1.2",
		"package-name-regex": "^4.0.0",
		"postcss": "^8.4.47",
		"postcss-load-config": "^5.1.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "5.0.0-next.244",
		"svelte-check": "^3.8.6",
		"sveltekit-superforms": "^2.19.1",
		"tailwindcss": "^3.4.13",
		"tschema": "^2.1.0",
		"tslib": "^2.7.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vitest": "^1.6.0",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"better-sqlite3": "^11.3.0",
		"duckdb-async": "^1.1.1"
	},
	"type": "module"
}

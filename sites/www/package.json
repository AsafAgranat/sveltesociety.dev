{
	"name": "www",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node --env-file=.env build",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:init": "NODE_ENV=development bun ./src/lib/server/db/initiate.ts",
		"db:seed": "NODE_ENV=development bun ./src/lib/server/db/seeds/index.ts",
		"db:test:init": "NODE_ENV=test ./src/lib/server/db/initiate.ts",
		"db:test:seed": "NODE_ENV=test ./src/lib/server/db/seeds/index.ts",
		"test:integration": "NODE_ENV=test pnpm run db:test:init && pnpm run db:test:seed && pnpm run build && playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@playwright/test": "^1.51.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/enhanced-img": "^0.1.9",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.8",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.7",
		"marked": "^14.1.4",
		"package-name-regex": "^4.0.0",
		"postcss": "^8.5.3",
		"postcss-load-config": "^5.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "^5.22.6",
		"svelte-check": "^3.8.6",
		"sveltekit-superforms": "^2.23.1",
		"tailwindcss": "^3.4.17",
		"tschema": "^2.1.0",
		"tslib": "^2.8.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vite": "^5.4.14",
		"vitest": "^1.6.1",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"duckdb-async": "^1.2.0"
	},
	"type": "module"
}

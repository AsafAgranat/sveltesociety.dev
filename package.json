{
  "name": "svelte-society",
  "description": "Monorepo for the Svelte Society website",
  "homepage": "https://sveltesociety.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/svelte-society/sveltesociety.dev"
  },
  "type": "module",
  "scripts": {
    "test:all": "pnpm -r test",
    "dev:ui": "pnpm --filter ui dev",
    "build:ui": "pnpm --filter ui build",
    "dev:www": "pnpm --filter www dev",
    "build:www": "pnpm --filter www build",
    "preview:www": "pnpm --filter www preview"
  },
  "packageManager": "pnpm@9.1.4",
  "pnpm": {
    "overrides": {
      "rollup": "npm:@rollup/wasm-node"
    }
  }
}